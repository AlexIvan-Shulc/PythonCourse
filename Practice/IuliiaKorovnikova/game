class Person:
    x = 0

    def draw(self):
        print(f"I`m Person at {self.x}!")

    def run(self):
        self.x += 1
        print(f"I`m Person.Run at {self.x}")

    def shoot(self):
        print("I`m Person. Peow-Peow!")

    def gather(self):
        print("I`m Person. Gather")

    def fly(self):
        print("I`m Person. I can`t fly")

class Runner(Person):
    def draw(self):
        print(f"I`m Runner at {self.x}!")

    def run(self):
        self.x += 2
        print(f"I`m Runner.Run at {self.x}")

    def shoot(self):
        print("I`m Runner. Peow-Peow!")

    def gather(self):
        print("I`m Runner.Gather")

        def treat():
            print (f"Uskorenie na 2. I`m at {self.x + int(2)}")
        def poison():
            print (f"Zamedlenie na 2. I`m at {self.x - int(2)}")

        cmd = input ("Choose - treat or poison:")
        if cmd == "treat":
            treat()
        elif cmd == "poison":
            poison()

    def fly(self):
        self.x += 2
        print(f"I`m Runner. I believe I can fly! I`m flying to {self.x}")

class SuperRunner(Person):
    def draw(self):
        print(f"I`m SuperRunner at {self.x}!")

    def run(self):
        self.x += 3
        print(f"I`m SuperRunner. Run at {self.x}")

    def shoot(self):
        print("I`m SuperRunner. Peow-Peow!")

    def gather(self):
        print("I`m SuperRunner. Gather")

        def treat():
            print(f"Uskorenie na 3. I`m at {self.x + int(3)}")

        def poison():
            print(f"Zamedlenie na 3. I`m at{self.x - int(3)}")

        cmd = input("Choose - treat or poison:")
        if cmd == "treat":
            treat()
        elif cmd == "poison":
            poison()

    def fly(self):
        self.x += 3
        print(f"I`m SuperRunner. I`m Supermaaan! I`m flying to {self.x}")


Persons = [Person(), Runner(), SuperRunner()]

for Person in Persons:
    Person.draw()
while True:
    cmd = input("Введите команду run, shoot, gather or fly:")
    n = int(input("Choose number of Persons 0 - Person, 1 - Runner, 2 - SuperRunner: "))
    if cmd == "run":
        Persons[n].run()
    elif cmd == "shoot":
        Persons[n].shoot()
    elif cmd == "gather":
        Persons[n].gather()
    elif cmd == "fly":
        Persons[n].fly()
    else:
        break
    for Person in Persons:
        Person.draw()
